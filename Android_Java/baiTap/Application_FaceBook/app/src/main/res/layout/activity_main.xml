<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B5997"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100sp"
        />
    <TextView
        android:id="@+id/facebook_Logo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/custom_logofb"
        android:textColor="#3B5997"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="f"
        android:textColor="#3B5997"
        android:textSize="85sp"
        app:layout_constraintTop_toTopOf="@id/facebook_Logo"
        app:layout_constraintBottom_toTopOf="@id/tvtt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        />
    <TextView
        android:id="@+id/tvtt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English "
        android:textColor="#AAB4CA"
        app:layout_constraintTop_toBottomOf="@id/facebook_Logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="105dp"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/tvtt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/facebook_Logo"
        app:layout_constraintBottom_toTopOf="@id/tvtt1"
        app:layout_constraintStart_toEndOf="@id/tvtt1"
        android:layout_marginBottom="20dp"
        android:textSize="70sp"
        app:layout_constraintVertical_bias="0.3"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:textColor="#EFF1F6"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/tvtt1"
        app:layout_constraintStart_toEndOf="@id/tvtt2"
        android:layout_marginStart="10dp" />
    <EditText
        android:id="@+id/ed_email_Text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3B5997"
        app:layout_constraintTop_toBottomOf="@id/tvtt1"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp"
        android:hint="Email or Phone"
        android:textSize="30sp"
        android:textColorHint="#AAB4CA" />
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A7B1C7"
        app:layout_constraintTop_toBottomOf="@id/ed_email_Text"
        android:layout_marginHorizontal="35dp" />
    <EditText
        android:id="@+id/ed_pass_Text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3B5997"
        app:layout_constraintTop_toBottomOf="@id/line2"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="30sp"
        android:textColorHint="#AAB4CA" />
    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A7B1C7"
        app:layout_constraintTop_toBottomOf="@id/ed_pass_Text"
        android:layout_marginHorizontal="35dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="log in"
        android:textSize="30sp"
        android:textColor="#AAB4CA"
        android:textAllCaps="true"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btn_login"
        />
    <TextView
        android:id="@+id/tv_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up for Facebook"
        android:textColor="#EFF1F6"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        />
    <TextView
        android:id="@+id/tv_ForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="20sp"
        android:textColor="#EFF1F6"
        app:layout_constraintTop_toBottomOf="@id/tv_SignUp"
        app:layout_constraintStart_toStartOf="@id/tv_SignUp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_help_emoji"
        app:layout_constraintBottom_toBottomOf="@id/tv_ForgotPass"
        app:layout_constraintStart_toEndOf="@id/tv_ForgotPass"
        android:layout_marginStart="50dp"
        android:text="?"
        android:textColor="#4E69A2"
        android:gravity="center"
        android:textSize="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"/>
    <TextView
        android:id="@+id/tt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By signing in you are agreeing \nour"
        app:layout_constraintTop_toBottomOf="@id/tv_login"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#6B5E5E" />
    <TextView
        android:id="@+id/tt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Term and privacy policy"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/tt1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="102dp"
        android:textColor="#0386D0" />
    <TextView
        android:id="@+id/tt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="#036BB9"
        app:layout_constraintTop_toBottomOf="@id/tt2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.11"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginStart="40dp"/>
    <TextView
        android:id="@+id/tt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="#A6A6A6"
        app:layout_constraintStart_toEndOf="@id/tt_login"
        app:layout_constraintTop_toTopOf="@id/tt_login"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/tt_login"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.38" />
    <TextView
        android:id="@+id/tv_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A6A6A6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.49"
        android:layout_marginHorizontal="50dp" />
    <EditText
        android:id="@+id/email_address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tt_login"
        app:layout_constraintBottom_toTopOf="@id/tv_line1"
        android:hint="Email Address"
        android:background="#FDF6FE"
        app:layout_constraintVertical_bias="0.9"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="30dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/ic_vector"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="55dp"
        android:src="@drawable/ic_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_vector1"
        app:layout_constraintTop_toTopOf="@id/ic_vector"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="55dp" />
    <TextView
        android:id="@+id/tv_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A6A6A6"
        app:layout_constraintTop_toBottomOf="@id/tv_line1"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25" />
    <EditText
        android:id="@+id/pass_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_line1"
        app:layout_constraintBottom_toTopOf="@id/tv_line2"
        android:hint="Password"
        android:textSize="20dp"
        android:background="#FDF6FE"
        android:textColor="#A6A6A6"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/email_address_text"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintVertical_bias="0.9" />
    <ImageView android:id="@+id/ic_lock"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@id/pass_text"
        android:src="@drawable/ic_lock"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="55dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@drawable/ic_lock1"
        app:layout_constraintBottom_toTopOf="@id/ic_lock"
        app:layout_constraintStart_toStartOf="@id/ic_lock"
        app:layout_constraintTop_toBottomOf="@id/tv_line1"
        android:layout_marginStart="3dp"
        android:layout_marginTop="62dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
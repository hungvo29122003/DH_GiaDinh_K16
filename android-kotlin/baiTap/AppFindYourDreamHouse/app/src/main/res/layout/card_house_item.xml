<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:paddingStart="20dp"
    android:layout_height="wrap_content"
    tools:context=".CardHouseItemActivity">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgvDreamHouse1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_house1"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Coner"
            android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_HouseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dreamsville House"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:textColor="@color/colorWhiteText"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_street_name"
         />

    <TextView
        android:id="@+id/tv_street_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="tên của con đường"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Jl. Sultan Iskandar Muda"
        android:textColor="#DBE6E5"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tv_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3,850"
        android:textColor="@color/colorWhiteText"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/tv_MonthlyRent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_MonthlyRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Rent"
        android:textColor="#DBE6E5"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_HouseTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp"
        android:background="@drawable/custom_drawable_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUpActivity">
 <EditText
     android:id="@+id/ed_Text_SignUp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="SingUp"
     app:layout_constraintTop_toTopOf="@id/line1"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.5"
     android:textSize="40dp"
     android:textColor="#000000"
     android:background="@color/white"/>
 <androidx.constraintlayout.widget.Guideline
     android:id="@+id/line1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     app:layout_constraintGuide_begin="50dp"
     />
 <androidx.cardview.widget.CardView
     android:id="@+id/cardUserName"
     android:layout_width="match_parent"
     android:layout_height="48dp"
     app:layout_constraintTop_toBottomOf="@id/ed_Text_SignUp"
     android:layout_marginTop="30dp"
     android:layout_marginHorizontal="30dp"
     app:cardCornerRadius="10dp">
     <EditText
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/white"
         android:hint="Enter Your Username"
         android:textColorHint="#000000"
         android:textSize="20dp"
         android:paddingStart="10dp"/>
     </androidx.cardview.widget.CardView>
 <androidx.cardview.widget.CardView
     android:id="@+id/cardYourEmail"
     android:layout_width="match_parent"
     android:layout_height="48dp"
     app:layout_constraintTop_toBottomOf="@id/cardUserName"
     android:layout_marginTop="30dp"
     android:layout_marginHorizontal="30dp"
     app:cardCornerRadius="10dp">
     <EditText
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@color/white"
         android:hint="Enter Your Email"
         android:paddingStart="10dp"
         android:textSize="20dp"
         android:textColorHint="#000000"
         />
</androidx.cardview.widget.CardView>

 <androidx.cardview.widget.CardView
     android:id="@+id/cardPhoneNumber"
     android:layout_width="match_parent"
     android:layout_height="48dp"
     app:layout_constraintTop_toBottomOf="@id/cardYourEmail"
     android:layout_marginTop="30dp"
     android:layout_marginHorizontal="30dp"
     app:cardCornerRadius="10dp">
  <EditText
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:hint="Enter Your Phone Number"
      android:paddingStart="10dp"
      android:textSize="20dp"
      android:textColorHint="#000000"
      />
 </androidx.cardview.widget.CardView>

 <androidx.cardview.widget.CardView
     android:id="@+id/cardPassWord"
     android:layout_width="match_parent"
     android:layout_height="48dp"
     app:layout_constraintTop_toBottomOf="@id/cardPhoneNumber"
     android:layout_marginTop="30dp"
     android:layout_marginHorizontal="30dp"
     app:cardCornerRadius="10dp">
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:hint="Enter Your Password"
      android:paddingStart="10dp"
      android:textSize="20dp"
      android:textColorHint="#000000"
      />
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/ic_eye"
      android:layout_marginStart="300dp"
      android:layout_marginVertical="9dp"/>
 </androidx.cardview.widget.CardView>

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btn_Signup"
     android:layout_width="match_parent"
     android:layout_height="48dp"
     android:text="Signup"
     android:layout_marginHorizontal="30dp"
     app:layout_constraintTop_toBottomOf="@id/cardPassWord"
     android:layout_marginTop="30dp"
     android:background="@drawable/custom_btn_signup"
     android:textColor="@color/white"/>
<TextView
    android:id="@+id/tvAlreadyHaveAnAccount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Already have an account? "
    app:layout_constraintTop_toBottomOf="@id/btn_Signup"
    android:layout_marginTop="10dp"
    android:textSize="18dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="79dp"
    android:textColor="#000000"
    app:layout_constraintHorizontal_chainStyle="packed"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    app:layout_constraintTop_toTopOf="@id/tvAlreadyHaveAnAccount"
    app:layout_constraintStart_toEndOf="@id/tvAlreadyHaveAnAccount"
    android:textSize="18dp"
    android:layout_marginStart="10dp"
    android:textColor="#2F89FC" />
<TextView
    android:id="@+id/LineReal"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/black"
    app:layout_constraintTop_toBottomOf="@id/tvAlreadyHaveAnAccount"
    android:layout_marginTop="15dp"
    android:layout_marginHorizontal="30dp" />
<TextView
    android:id="@+id/tvOr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Or"
    app:layout_constraintTop_toTopOf="@id/LineReal"
    app:layout_constraintBottom_toBottomOf="@id/LineReal"
    android:textSize="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:padding="5dp"
    android:background="@color/white" />
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_Login_Fb"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginHorizontal="30dp"
    app:layout_constraintTop_toBottomOf="@id/tvOr"
    android:text="Login with Facebook"
    android:textColor="#FFFFFF"
    android:textAllCaps="false"
    android:textSize="20dp"
    android:drawableStart="@drawable/ic_logo_fb"
    android:background="@drawable/button_login_fb"/>
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginHorizontal="30dp"
    app:layout_constraintTop_toBottomOf="@id/btn_Login_Fb"
    android:layout_marginTop="20dp"
    android:text="Login with Google"
    android:textSize="20dp"
    android:textAllCaps="false"
    android:drawableStart="@drawable/ic_gg"
    android:background="@drawable/button_login_gg"
    android:textColor="#000000" />
</androidx.constraintlayout.widget.ConstraintLayout>